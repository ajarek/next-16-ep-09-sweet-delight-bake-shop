generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model BakedGood {
  id            Int          @id @default(autoincrement())
  name          String
  price         Float
  category      String
  image         String
  description   String
  quantity      Int
  transaction   Transaction? @relation(fields: [transactionId], references: [id])
  transactionId Int?
}

model Transaction {
  id          Int         @id @default(autoincrement())
  Category    String
  Payment     String
  Rabat       Float
  Podatek     Float
  Do_zap≈Çaty Float
  Items       BakedGood[]
  date        DateTime    @default(now())
}
